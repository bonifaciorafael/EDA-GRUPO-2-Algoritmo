utilizando el sistema;
utilizando System.Collections.Generic;
utilizando System.Linq;
utilizando System.Text;

Espacio de nombres quicksort
{
 clase Clase
    {
 vacío estático Main()
        {
            int num;
            Console.WriteLine("Metodo de Quick Sort (Ordenamiento Rapido)");
            Console.Write("Dgitar la cantidad de numeros a ordenar (Vector): ");
            n = Int32.Parse(Console.ReadLine());
 llenar b = nuevo llenar(num);
        }
    }

 clase llenar
    {
        int x;
        int[] vector;
        public llenar(int num)
        {
            x = n;
 vector = nuevo int[x];
 para (int identidad = 0; identidad < x; identidad++)
            {
                Console.Write("ingrese valor {0}: ", identidad + 1);
                vector[identidad] = Int32.Parse(Console.ReadLine());
            }
            quicksort(vector, 0, x - 1);
            mostrar();
        }

        private void quicksort(int[] vector, int primero, int ultimo)
        {
            int i, j, central;
 doble pivote;
            central = (primero + ultimo) / 2;
            pivote = vector[central];
            identidad = primero;
            j = ultimo;
 hacer
            {
 mientras que (vector[identidad] < pivote) i++;
 mientras que (vector[j] > pivote) j--;
 si (identidad <= j)
                {
                    int temp;
                    temp = vector[identidad];
                    vector[identidad] = vector[j];
                    vector[j] = temp;
                    i++;
                    j--;
                }
 } mientras que (identidad <= j);

            if (primero < j)
            {
                quicksort(vector, primero, j);
            }
            if (i < ultimo)
            {
                quicksort(vector, identidad, ultimo);
            }
        }

        private void mostrar()
        {
            Console.WriteLine("lista (Vector) ordenados en forma ascendente");
 para (int identidad = 0; identidad < h; identidad++)
            {
                Console.Write("{0} ", vector[identidad]);
            }
            Console.ReadLine();
        }
    }
}
