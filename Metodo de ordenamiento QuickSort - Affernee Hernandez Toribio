utilizando el sistema;
utilizando System.Collections.Generic;
utilizando System.Linq;
utilizando System.Text;

espacio de nombres quicksort
{
 clase Clase
    {
 vacío estático Main()
        {
            int n;
            Console.WriteLine("Metodo de Quick Sort (Ordenamiento Rapido)");
            Console.Write("Dgitar la cantidad de numeros a ordenar (Vector): ");
            n = Int32.Parse(Console.ReadLine());
 llenar b = nuevo llenar(n);
        }
    }

 clase llenar
    {
        int h;
        int[] vector;
        public llenar(int n)
        {
            h = n;
 vector = nuevo int[h];
 para (int i = 0; i < h; i++)
            {
                Console.Write("ingrese valor {0}: ", i + 1);
                vector[i] = Int32.Parse(Console.ReadLine());
            }
            quicksort(vector, 0, h - 1);
            mostrar();
        }

        private void quicksort(int[] vector, int primero, int ultimo)
        {
            int i, j, central;
 doble pivote;
            central = (primero + ultimo) / 2;
            pivote = vector[central];
            i = primero;
            j = ultimo;
 hacer
            {
 mientras que (vector[i] < pivote) i++;
 mientras que (vector[j] > pivote) j--;
 si (i <= j)
                {
                    int temp;
                    temp = vector[i];
                    vector[i] = vector[j];
                    vector[j] = temp;
                    i++;
                    j--;
                }
 } mientras que (i <= j);

            if (primero < j)
            {
                quicksort(vector, primero, j);
            }
            if (i < ultimo)
            {
                quicksort(vector, i, ultimo);
            }
        }

        private void mostrar()
        {
            Console.WriteLine("Vector ordenados en forma ascendente");
 para (int i = 0; i < h; i++)
            {
                Console.Write("{0} ", vector[i]);
            }
            Console.ReadLine();
        }
    }
}
